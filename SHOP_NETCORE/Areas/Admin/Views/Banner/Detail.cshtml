@model SHOP_NETCORE.Models.BannerViewModel
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_layouts.cshtml";
}

<section class="content">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Chi tiết</h3>
        </div>
        <!-- form start -->
        <div class="box-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <label asp-for="Name" class="col-sm-2 control-label"></label>
                    <div class="col-sm-6">
                        <input type="text" readonly value="@Model.Name" class="form-control">
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-2 control-label">Hình ảnh</label>
                    <div class="col-sm-10">
                        <img src="@Url.Content("~/images/banner/"+ Model.LinkImage)" height="200px" width="400px" />
                    </div>
                </div>

                @if (Model.Status == true)
                    {
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Trạng thái</label>
                        <div class="col-sm-6">
                            <label class="col-sm-2 control-label">Hiển thị</label>
                        </div>
                    </div>

                    }
                    else
                    {
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Trạng thái</label>
                        <div class="col-sm-6">
                            <label class="col-sm-2 control-label">Ẩn</label>
                        </div>
                    </div>

                    }

                <div class="box-footer col-sm-offset-2">
                    <a href="/admin/banner" class="btn btn-default ">Trở về</a>
                </div>
            </div>

        </div>
    </div><!-- /.box -->
</section>

