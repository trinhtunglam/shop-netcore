@model SHOP_NETCORE.Models.SlideViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layouts.cshtml";
}

@section Scripts{ 
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}

<section class="content">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Thêm mới Slide, Banner</h3>
        </div>
        <!-- form start -->
        <form asp-controller="Slide" asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="box-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label asp-for="Name" class="col-sm-2 control-label"></label>
                        <div class="col-sm-6">
                            <input type="text" asp-for="Name" class="form-control">
                            <span asp-validation-for="Name"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">Employee Image</label>
                        <div class="col-md-6">
                            <input class="form-control" type="file" name="Images" accept="image/*" multiple />
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="LinkImage" class="col-sm-2 control-label"></label>
                        <div class="col-sm-6">
                            <input type="text" asp-for="LinkImage" class="form-control">
                            <span asp-validation-for="LinkImage"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Status" class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <label>
                                @Html.CheckBoxFor(m => m.Status, new { @type = "checkbox" })
                            </label>
                        </div>
                    </div>

                    <div class="box-footer col-sm-offset-2">
                        <button class="btn btn-default ">Hủy</button>
                        <button type="submit" class="btn btn-success">Lưu</button>
                    </div>
                </div>

            </div>
        </form>
    </div><!-- /.box -->
</section>