@model List<SHOP_NETCORE.Models.ProductCategoryViewModel>

    @{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layouts.cshtml";
    }

    @section Scripts{
        <script src="~/admin/bower_components/bootbox/bootbox.min.js"></script>

        <script>
            $('.btnDelete').click(function () {
                var id = $(this).data('id');
                bootbox.confirm("Bạn có chắc muốn xóa?", function (result) {
                    //Example.show("Confirm result: " + result);
                    if (result == true) {
                        $.ajax({
                            url: '/admin/productcategory/delete',
                            data: {
                                id: id
                            },
                            type: 'POST',
                            dataType: 'json',
                            success: function (responce) {
                                if (responce.status == true) {
                                    bootbox.alert("Xóa thành công", function () {
                                        location.href = "/admin/productcategory";
                                    });
                                }
                                else {
                                    alert("Loi");
                                }
                            },
                            error: function (err) {
                                console.log(err);
                            }
                        })
                    }
                });


            });
        </script>


    }

