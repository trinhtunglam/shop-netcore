    <!-- Main content -->
    <section class="content">
        <!-- Default box -->
        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Danh sách danh mục</h3>
                <div class="box-tools pull-right">
                    <button class="btn btn-box-tool" data-widget="collapse" data-toggle="tooltip" title="Collapse"><i class="fa fa-minus"></i></button>
                    <button class="btn btn-box-tool" data-widget="remove" data-toggle="tooltip" title="Remove"><i class="fa fa-times"></i></button>
                </div>
            </div>
            <div class="box-body">
                <di class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Từ khóa">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button">Tìm kiếm</button>
                            </span>
                        </div><!-- /input-group -->
                    </div>
                    <div class="col-md-6">
                        <a href="/admin/productcategory/create" class="btn btn-success">Thêm mới</a>
                        <button class="btn btn-danger" id="btnDelete">Xóa</button>
                    </div>
                </di>
                <div class="row">
                    <div class="col-md-12">
                        <table class="table table-bordered">
                            <tr>
                                <th style="width: 5%">ID</th>
                                <th style="width:20%">Tên danh mục</th>
                                <th style="width: 20%">Định danh</th>
                                <th style="width: 30%">Mô tả</th>
                                <th style="width: 15%">Danh mục cha</th>
                                <th style="width: 10%">Thao tác</th>
                            </tr>
                            @foreach (var item in Model)
                        {
                                <tr>
                                    <td>@item.Id</td>
                                    <td>@item.Name</td>
                                    <td>@item.Alias</td>
                                    <td>@item.Description</td>
                                    <td>@item.ParentID</td>
                                    <td>
                                        <a href="/admin/productcategory/edit/@item.Id" class="btn btn-sm btn-primary"><i class="fa fa-pencil"></i></a>
                                        <button class="btn  btn-sm btn-danger btnDelete" id="btnDelete" data-id="@item.Id"><i class="fa fa-trash"></i></button>
                                    </td>
                                </tr>
                        }


                        </table>
                    </div>
                </div>
            </div><!-- /.box-body -->

        </div><!-- /.box -->
    </section><!-- /.content -->


