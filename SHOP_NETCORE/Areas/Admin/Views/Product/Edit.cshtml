@model SHOP_NETCORE.Models.ProductViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layouts.cshtml";
}
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/ckeditor/ckeditor.js"></script>
    <script src="~/lib/ckeditor/adapters/jquery.js"></script>
    <script>
        $('#txtContent1').ckeditor();
    </script>

}

<section class="content">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Cập nhật sản phẩm</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        @using (Html.BeginForm("Update", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="box-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        @*<label asp-for="Name" class="col-sm-2 control-label"></label>*@
                        @Html.LabelFor(m => m.ProductCode, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @*<input type="text" asp-for="Name" class="form-control">*@
                            @Html.TextBoxFor(m => m.ProductCode, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ProductCode, "", new { @class = "text-danger" })
                            @Html.HiddenFor(m => m.Id)
                            @Html.HiddenFor(m => m.CreateDate)
                            @*<span asp-validation-for="Name"></span>*@
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label asp-for="Name" class="col-sm-2 control-label"></label>*@
                        @Html.LabelFor(m => m.Name, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @*<input type="text" asp-for="Name" class="form-control">*@
                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                            @*<span asp-validation-for="Name"></span>*@
                        </div>
                    </div>
                    <div class="form-group">
                        @*<label asp-for="Name" class="col-sm-2 control-label"></label>*@
                        @Html.LabelFor(m => m.Alias, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @*<input type="text" asp-for="Name" class="form-control">*@
                            @Html.TextBoxFor(m => m.Alias, new { @class = "form-control" })
                            @*<span asp-validation-for="Name"></span>*@
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label asp-for="Name" class="col-sm-2 control-label"></label>*@
                        @Html.LabelFor(m => m.OriginalPrice, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @*<input type="text" asp-for="Name" class="form-control">*@
                            @Html.TextBoxFor(m => m.OriginalPrice, new { @class = "form-control", @type = "number" })
                            @*<span asp-validation-for="Name"></span>*@
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label asp-for="Name" class="col-sm-2 control-label"></label>*@
                        @Html.LabelFor(m => m.Price, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @*<input type="text" asp-for="Name" class="form-control">*@
                            @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @type = "number" })
                            @*<span asp-validation-for="Name"></span>*@
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label asp-for="Name" class="col-sm-2 control-label"></label>*@
                        @Html.LabelFor(m => m.PromotionPrice, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @*<input type="text" asp-for="Name" class="form-control">*@
                            @Html.TextBoxFor(m => m.PromotionPrice, new { @class = "form-control", @type = "number" })
                            @*<span asp-validation-for="Name"></span>*@
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label asp-for="Name" class="col-sm-2 control-label"></label>*@
                        @Html.LabelFor(m => m.Warranty, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @*<input type="text" asp-for="Name" class="form-control">*@
                            @Html.TextBoxFor(m => m.Warranty, new { @class = "form-control", @type = "number" })
                            @*<span asp-validation-for="Name"></span>*@
                        </div>
                    </div>

                    <div class="form-group">
                        @*<label asp-for="Name" class="col-sm-2 control-label"></label>*@
                        @Html.LabelFor(m => m.Quantity, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @*<input type="text" asp-for="Name" class="form-control">*@
                            @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", @type = "number" })
                            @*<span asp-validation-for="Name"></span>*@
                        </div>
                    </div>

                    <div class="form-group form-md-line-input">
                        <label asp-for="Name" class="col-sm-2 control-label">Hình ảnh</label>
                        <div class="col-md-6">
                            <img src="@Url.Content("~/images/"+ Model.Images)" height="210px" width="200px" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-md-2 control-label">Chọn ảnh</label>
                        <div class="col-md-6">
                            @*<input class="form-control" type="file" name="Images" accept="image/*" />*@
                            @Html.TextBoxFor(m => m.Images, new { @class = "form-control", @type = "file" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Content, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @id = "txtContent1" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.CategoryId, new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.DropDownListFor(model => model.CategoryId, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CategoryId)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ProducerId, new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.DropDownListFor(model => model.ProducerId, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ProducerId)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SupplierId, new { @class = "control-label col-md-2" })
                        <div class="col-md-6">
                            @Html.DropDownListFor(model => model.SupplierId, null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SupplierId)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.HotFlag, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.HotFlag, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Status, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @Html.EditorFor(m => m.Status, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="box-footer col-sm-offset-2">
                        <button class="btn btn-default ">Hủy</button>
                        <button type="submit" class="btn btn-success">Lưu</button>
                    </div>
                </div>

            </div><!-- /.box-body -->
                <!-- /.box-footer -->
        }

    </div><!-- /.box -->
</section>
