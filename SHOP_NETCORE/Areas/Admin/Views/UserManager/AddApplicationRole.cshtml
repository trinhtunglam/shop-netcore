@model SHOP_NETCORE.Models.ApplicationRoleViewModel
@{
    ViewData["Title"] = "AddApplicationRole";
    Layout = "~/Areas/Admin/Views/Shared/_layouts.cshtml";
}

<section class="content">
    <!-- Horizontal Form -->
    <div class="box box-info">
        <div class="box-header with-border">
            <h3 class="box-title">Cập nhật sản phẩm</h3>
        </div><!-- /.box-header -->
        <!-- form start -->
        @using (Html.BeginForm("AddRole", "UserManager", FormMethod.Post))
        {
            <div class="box-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(m => m.RoleName, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control" })
                            @Html.HiddenFor(m => m.Id)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Description, new { @class = "col-sm-2 control-label" })
                        <div class="col-sm-6">
                            @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="box-footer col-sm-offset-2">
                        <button class="btn btn-default ">Hủy</button>
                        <button type="submit" class="btn btn-success">Lưu</button>
                    </div>
                </div>

            </div><!-- /.box-body -->
                <!-- /.box-footer -->
        }

    </div><!-- /.box -->
</section>

